{% extends 'base.html.twig' %}

{% block title %}Profil - Sortir.eni{% endblock %}


{% block body %}
    <h1>Mon profil</h1>

    <div class="row">
        <div class="col-6">
            <div class="md-form">
                {{ form_label(profileForm.nom) }}
                {{ form_widget(profileForm.nom) }}
                <small class="form-text text-danger mb-4">
                    {{ form_errors(profileForm.nom) }}
                </small>
            </div>
        </div>
        <div class="col-6">
            <div class="md-form">
                {{ form_label(profileForm.prenom) }}
                {{ form_widget(profileForm.prenom) }}
                <small class="form-text text-danger mb-4">
                    {{ form_errors(profileForm.prenom) }}
                </small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="md-form">
                {{ form_label(profileForm.email) }}
                {{ form_widget(profileForm.email) }}
                <small class="form-text text-danger mb-4">
                    {{ form_errors(profileForm.email) }}
                </small>
            </div>
        </div>
        <div class="col-6">
            <div class="md-form">
                {{ form_label(profileForm.telephone) }}
                {{ form_widget(profileForm.telephone) }}
                <small class="form-text text-danger mb-4">
                    {{ form_errors(profileForm.telephone) }}
                </small>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="md-form">
                {{ form_label(profileForm.password.first) }}
                {{ form_widget(profileForm.password.first) }}
                <small class="form-text text-danger mb-4">
                    {{ form_errors(profileForm.password.first) }}
                </small>
            </div>
        </div>
        <div class="col-6">
            <div class="md-form">
                {{ form_label(profileForm.password.second) }}
                {{ form_widget(profileForm.password.second) }}
                <small class="form-text text-danger mb-4">
                    {{ form_errors(profileForm.password.second) }}
                </small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="">
                {{ form_label(profileForm.city) }}
                {{ form_widget(profileForm.city) }}
            </div>
        </div>

        <div class="col">
            <div class="">
                {{ form_label(profileForm.avatar) }}
                {{ form_widget(profileForm.avatar) }}
            </div>
        </div>
    </div>
    <div class="row mt-4 justify-content-end">
        <button class="btn btn-success">Enregistrer</button>
    </div>
    {{ form_end(profileForm) }}

{% endblock %}

