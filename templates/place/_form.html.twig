<div class="card">
    <div class="card-body">
        <h3 class="card-title">Sites</h3>
        <div class="card-text">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-12">
                    <div class="md-form">
                        {{ form_label(form.libelle) }}
                        {{ form_widget(form.libelle) }}
                        <small class="form-text text-danger mb-4">
                            {{ form_errors(form.libelle) }}
                        </small>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="md-form">
                        {{ form_label(form.street) }}
                        {{ form_widget(form.street) }}
                        <small class="form-text text-danger mb-4">
                            {{ form_errors(form.street) }}
                        </small>
                    </div>
                </div>
                <div class="col-12">
                    <div class="md-form">
                        {{ form_label(form.latitude) }}
                        {{ form_widget(form.latitude) }}
                        <small class="form-text text-danger mb-4">
                            {{ form_errors(form.latitude) }}
                        </small>
                    </div>
                </div>
                <div class="col-12">
                    <div class="md-form">
                        {{ form_label(form.longitude) }}
                        {{ form_widget(form.longitude) }}
                        <small class="form-text text-danger mb-4">
                            {{ form_errors(form.longitude) }}
                        </small>
                    </div>
                </div>
                <div class="col-12">
                    {{ form_label(form.city) }}
                    {{ form_widget(form.city) }}
                    <small class="form-text text-danger mb-4">
                        {{ form_errors(form.city) }}
                    </small>
                </div>
            </div>
            <button class="btn btn-success">Confirmer</button>
            <a href="{{ path('place_index') }}" class="btn btn-primary">Retour</a>
            {{ form_end(form) }}
        </div>

    </div>
</div>
