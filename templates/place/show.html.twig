
{% extends 'base.html.twig' %}



{% block title %}Place{% endblock %}

{% block body %}
    <div class="card card-cascade wider reverse">
        <!-- Card image -->
        <div class="view view-cascade overlay">
            <div id="map"></div>
            <script>
              let map;
              function initMap() {
                map = new google.maps.Map(document.getElementById('map'), {
                  center: {
                    lat: {{ place.latitude }},
                    lng: {{ place.longitude }}
                  },
                  zoom: 10
                });
                var marker = new google.maps.Marker({position: {
                    lat: {{ place.latitude }},
                    lng: {{ place.longitude }}
                  }, map: map});
              }
            </script>
            <a>
                <div class="mask rgba-white-slight"></div>
            </a>
        </div>

        <!-- Card content -->
        <div class="card-body card-body-cascade text-center">

            <!-- Title -->
            <h4 class="card-title"><strong>{{ place.libelle }}</strong></h4>
            <!-- Text -->
            <h6 class="card-subtitle">{{ place.street }}</h6>
            <p class="card-text">
                {{ place.latitude }};{{ place.longitude }}
            </p>
        </div>
    </div>
    <div class="row justify-content-between">
        <div class="col-lg-4 col-sm-6">
            <a href="{{ path('place_index') }}" class="btn btn-primary">Retour</a>
            <a href="{{ path('place_edit', {'id': place.id}) }}" class="btn btn-outline-success">Modifier</a>
        </div>
        <div class="col-lg-2 col-sm-6">
            {{ include('place/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
