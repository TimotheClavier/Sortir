<div class="modal fade" id="add_city_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ajouter une ville</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="md-form">
                        <div class="row">
                            <div class="col-12">
                                {{ form_label(formCity.libelle) }}
                                {{ form_widget(formCity.libelle) }}
                                <small class="form-text text-danger mb-4">
                                    {{ form_errors(formCity.libelle) }}
                                </small>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                {{ form_label(formCity.PostalCode) }}
                                {{ form_widget(formCity.PostalCode) }}
                                <small class="form-text text-danger mb-4">
                                    {{ form_errors(formCity.PostalCode) }}
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="closeCityModalBtn" class="btn btn-outline-primary" data-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-success" id="addCityModalBtn">Enregistrer</button>
                </div>
            </div>
    </div>
</div>