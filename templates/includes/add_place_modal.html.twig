<div class="modal fade" id="add_place_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ajouter un lieu  </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="md-form">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-12">
                                <div class="md-form">
                                    {{ form_label(form.libelle) }}
                                    {{ form_widget(form.libelle) }}
                                    <small class="form-text text-danger mb-4">
                                        {{ form_errors(form.libelle) }}
                                    </small>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="md-form">
                                    {{ form_label(form.street) }}
                                    {{ form_widget(form.street) }}
                                    <small class="form-text text-danger mb-4">
                                        {{ form_errors(form.street) }}
                                    </small>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="md-form">
                                    {{ form_label(form.latitude) }}
                                    {{ form_widget(form.latitude) }}
                                    <small class="form-text text-danger mb-4">
                                        {{ form_errors(form.latitude) }}
                                    </small>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="md-form">
                                    {{ form_label(form.longitude) }}
                                    {{ form_widget(form.longitude) }}
                                    <small class="form-text text-danger mb-4">
                                        {{ form_errors(form.longitude) }}
                                    </small>
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-primary" id="closePlaceModalBtn" data-dismiss="modal">Fermer</button>
                    <button type="submit" class="btn btn-success" id="addPlaceModalBtn">Enregistrer</button>
                </div>
            </div>
    </div>
</div>