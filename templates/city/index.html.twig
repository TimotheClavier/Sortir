{% extends 'base.html.twig' %}

{% block title %}City index{% endblock %}

{% block body %}
    <h1>Gestion des Villes</h1>

    <table class="table table-striped table-bordered" id="data-table-city">
        <thead>
            <tr>
                <th class="th-sm">Libelle</th>
                <th class="th-sm">PostalCode</th>
                <th class="th-sm">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td>{{ city.libelle }}</td>
                <td>{{ city.PostalCode }}</td>
                <td>
                    <a href="{{ path('city_show', {'id': city.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('city_edit', {'id': city.id}) }}" class="green-text"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('city_new') }}" class="btn btn-success">Ajouter</a>
{% endblock %}
