{% extends 'base.html.twig' %}

{% block title %}Profil - Sortir.eni{% endblock %}


{% block body %}
    <div class="modal-dialog cascading-modal modal-avatar modal-sm" role="document" id="profil-modal">
        <!--Content-->
        <div class="modal-content">

            <!--Header-->
            <div class="modal-header">
                <img src="{{ asset(user.avatar) }}" alt="avatar" class="rounded-circle img-responsive" height="130" width="130">
            </div>
            <!--Body-->
            <div class="modal-body text-center mb-1">

                <h3 class="mt-1 mb-2 font-weight-bold dark-grey-text">{{ user.nom }} {{ user.prenom }}</h3>
                <p class="card-text"><i class="fas fa-city"></i> {{ user.city.libelle }}</p>
                <div class="row">
                    <div class="col-lg-6 col-sm-12">
                        <p><i class="fas fa-at"></i> {{ user.email }}</p>
                    </div>
                    <div class="col-lg-6 col-sm-12">
                        <i class="fas fa-phone"></i> {{ user.telephone }}</p>
                    </div>
                </div>
            </div>

        </div>
        <!--/.Content-->
    </div>
    <a href="{{ path('Index') }}" class="btn btn-outline-primary">Retour</a>
{% endblock %}

