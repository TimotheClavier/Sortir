{% extends 'base.html.twig' %}

{% block title %}Trip{% endblock %}

{% block body %}
    <h1>Trip</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trip.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ trip.name }}</td>
            </tr>
            <tr>
                <th>TripDate</th>
                <td>{{ trip.tripDate ? trip.tripDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>InscriptionDate</th>
                <td>{{ trip.inscriptionDate ? trip.inscriptionDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Seat</th>
                <td>{{ trip.seat }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ trip.duration }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trip.description }}</td>
            </tr>
            <tr>
                <th>Organizer</th>
                <td>{{ trip.organizer }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ trip.status }}</td>
            </tr>
            <tr>
                <th>Cause</th>
                <td>{{ trip.cause }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('trip_index') }}">back to list</a>

    <a href="{{ path('trip_edit', {'id': trip.id}) }}">edit</a>

    {{ include('trip/_delete_form.html.twig') }}
{% endblock %}
