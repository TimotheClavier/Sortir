{% extends 'base.html.twig' %}

{% block title %}Trip{% endblock %}

{% block body %}
    <div class="row">
        <!-- Card -->
        <div class="card card-cascade wider reverse">

            <!-- Card image -->
            <div class="view view-cascade overlay">
                <img class="card-img-top card-full-width" src="{{ asset(trip.coverImage) }}" alt="Card image cap">
                <a>
                    <div class="mask rgba-white-slight"></div>
                </a>
            </div>

            <!-- Card content -->
            <div class="card-body card-body-cascade text-center">

                <!-- Title -->
                <h4 class="card-title"><strong>{{ trip.name }}</strong></h4>
                <h6 class="card-title">{{ trip.tripDate.format('d F Y') }}</h6>
                <!-- Subtitle -->
                <h6 class="font-weight-bold green-text py-2"><i class="{{ trip.status.icon }}"></i> {{ trip.status }}</h6>
                <!-- Text -->
                <p class="card-text">
                    {{ trip.description }}
                </p>
                <div class="container">

                <div class="row">
                    <div class="col-4">
                        <div class="progress md-progress material-tooltip-main" style="height: 20px"
                             data-toggle="popover-hover" title="Places disponible"
                             data-content="Il y'a {{ trip.seat }} places pour cette Ã©venement.">
                            <div class="progress-bar bg-success" role="progressbar"
                                 style="width: {{ (trip.users|length / trip.seat * 100 ) }}%;
                                         height: 20px"
                                 aria-valuenow="{{ (trip.users|length / trip.seat * 100) }}"
                                 aria-valuemin="0" aria-valuemax="{{ trip.seat }}">
                                {{ (trip.users|length / trip.seat * 100)|round }}%
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        {{ trip.duration / 60 }}h
                    </div>
                    <div class="col-4">
                        <p class="card-subtitle">
                            <i class="fas fa-calendar-alt"></i>
                             Inscription jusqu'au {{ trip.inscriptionDate.format('d F Y') }}
                        </p>
                    </div>
                </div>
                <div class="row justify-content-between">
                    <div class="col-lg-4 col-sm-6">
                        <a class="btn btn-primary" href="{{ path('Index') }}">Retour</a>
                        {% if trip.organizer.id == app.user.id %}
                            <a class="btn btn-outline-success" href="{{ path('trip_edit', {'id': trip.id}) }}">Modifier</a>
                        {% endif %}
                    </div>
                    <div class="col-lg-2 col-sm-6">
                        {% if trip.organizer.id == app.user.id %}
                            {{ include('trip/_delete_form.html.twig') }}
                        {% endif %}
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
    <div id="map"></div>
    <script>
      let map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {
            lat: {{ trip.place.latitude }},
            lng: {{ trip.place.longitude }}
          },
          zoom: 10
        });
        var marker = new google.maps.Marker({position: {
            lat: {{ trip.place.latitude }},
            lng: {{ trip.place.longitude }}
          }, map: map});
      }
    </script>
{% endblock %}
